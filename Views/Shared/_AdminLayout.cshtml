<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/custom.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/admin.css" asp-append-version="true">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading text-center py-4 primary-text fs-4 fw-bold text-uppercase border-bottom">
                <i class="fas fa-user-secret me-2"></i>ADMIN
            </div>

            <div class="list-group list-group-flush my-3 primary-text">
                <a href="#" class="list-group-item d-flex my-2  list-group-item-action bg-transparent second-text fw-bold">
                    <i class="fas fa-tachometer-alt mx-2"></i>Dashboard
                </a>
                <a href="#" class="list-group-item d-flex my-2 list-group-item-action bg-transparent second-text fw-bold">
                    <i class="nav-icon fa fa-user-circle mx-2"></i>Người dùng
                </a>
                <a href="#" class="list-group-item d-flex my-2 list-group-item-action bg-transparent second-text fw-bold">
                    <i class="nav-icon fa fa-edit mx-2"></i>Bài viết
                </a>
                <a href="#" class="list-group-item  d-flex my-2 list-group-item-action bg-transparent text-danger fw-bold">
                    <i class="fas fa-power-off mx-2"></i>Đăng xuất
                </a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->

        <div id="page-content-wrapper">

            <nav class="navbar navbar-expand-lg navbar-light bg-transparent py-3 px-3">
                <div class="d-flex align-items-center">
                    <i class="fas fa-align-left primary-text fs-4 me-3" id="menu-toggle"></i>
                    <a class="nav-link text-dark" asp-area="" asp-controller="/" asp-action="index"><h2 class="fs-2 m-0">HOME</h2></a>
                </div>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <div class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <div class="nav-item btn-group dropstart">
                            <button type="button" class="btn dropdown-toggle  btn-lg  dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start">
                                @if (User.IsInRole("admin"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="admin" asp-action="index">Admin</a>
                                    </li>
                                }

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="user" asp-action="Profile">Thông tin chung</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="user" asp-action="SavedNews">Tin đã lưu</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="user" asp-action="WatchedNews">Tin đã xem</a>
                                </li>
                                <li class="nav-item">@Html.ActionLink("Đăng xuất", "Logout", "User", null, new { @class = "nav-link",@style="color: var(--primary-color)" })</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid px-4">
                <div>
                    @RenderBody()
                </div>
            </div>

        </div>
    </div>
    <!-- /#page-content-wrapper -->
    @*    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>*@
    <script>
        var el = document.getElementById("wrapper");
        var toggleButton = document.getElementById("menu-toggle");

        toggleButton.onclick = function () {
            el.classList.toggle("toggled");
        };
    </script>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.3"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
