@using Microsoft.AspNetCore.Identity
@model news24h.Models.User


@{
    ViewBag.Title = "Login";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5" style="background-color: none">
                <div class="card-body" style="border-radius:50px">

                    <h5 class="card-title text-center" style="color:var(--primary-color)">CHÀO MƯNG BẠN ĐẾN VỚI NHÓM TÔI</h5>
                    <div class="text-center text-danger">@ViewBag.Error</div>
                    <section id="loginForm">
                        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal" }))
                        {
                            @Html.AntiForgeryToken()
                            <h4>Sử dụng tài khoản đề đăng nhập.</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                               @* @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })*@
                               <p class="col-md-2 control-label" style="color:var(--primary-color)">Tên đăng nhập</p>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                               @* @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })*@
                               <p class="col-md-2 control-label" style="color:var(--primary-color)">Mật khẩu</p>
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Đăng nhập" class="btn btn-default" style="color:var(--primary-color)" />
                                </div>
                            </div>
                            <p>
                                @Html.ActionLink("Bạn chưa có tài khoản?Vui lòng đăng kí", "SignUp")
                            </p>
                            @* Enable this once you have account confirmation enabled for password reset functionality *@
                            <p>
                                @Html.ActionLink("Quên mật khẩu?", "ForgotPassword")
                            </p>
                        }

                </div>
            </div>
        </div>
    </div>
</div>

